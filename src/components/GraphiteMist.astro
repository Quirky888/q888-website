<div 
  id="graphite-mist-container"
  class="absolute inset-0 z-50 pointer-events-none overflow-hidden"
  aria-hidden="true"
>
  <svg 
    id="graphite-mist-svg"
    class="absolute inset-0 w-full h-full"
    xmlns="http://www.w3.org/2000/svg"
    preserveAspectRatio="xMidYMid slice"
  >
    <defs>
      <!-- Mist Generation Filter -->
      <filter id="cloud-gen" x="0%" y="0%" width="100%" height="100%" color-interpolation-filters="sRGB">
        <feTurbulence 
          id="mist-turbulence"
          type="fractalNoise" 
          baseFrequency="0.006" 
          numOctaves="4"
          seed="8"
          result="clouds"
        />
        <!-- Graphite grey tones with natural texture gaps -->
        <feColorMatrix 
          in="clouds" 
          type="matrix"
          values="0 0 0 0 0.22
                  0 0 0 0 0.22
                  0 0 0 0 0.25
                  0 0 0 3.2 -1.0"
          result="grey-clouds"
        />
        <feGaussianBlur in="grey-clouds" stdDeviation="1.5" result="soft-clouds" />
      </filter>

      <!-- Soft reveal lens radial gradient -->
      <radialGradient id="lens-gradient">
        <stop offset="0%" stop-color="black" stop-opacity="0.8" /> <!-- Most transparent in center -->
        <stop offset="40%" stop-color="black" stop-opacity="0.5" />
        <stop offset="100%" stop-color="black" stop-opacity="0" /> <!-- Back to full fog -->
      </radialGradient>

      <!-- Mask: Base mist (white) minus the lens clearing (black gradient) -->
      <mask id="mist-lens-mask">
        <!-- Base: Opaque mist everywhere -->
        <rect width="100%" height="100%" fill="white" />
        <!-- Lens clearing: subtracts opacity -->
        <circle 
          id="lens-circle" 
          cx="-1000" 
          cy="-1000" 
          r="260" 
          fill="url(#lens-gradient)" 
          style="filter: blur(40px);"
        />
      </mask>

      <!-- Vertical atmospheric fade (mild) -->
      <linearGradient id="vertical-fade-grad" x1="0" y1="0" x2="0" y2="1">
        <stop offset="0%" stop-color="white" stop-opacity="1" />
        <stop offset="100%" stop-color="white" stop-opacity="0.6" />
      </linearGradient>
      <mask id="vertical-fade-mask">
        <rect width="100%" height="100%" fill="url(#vertical-fade-grad)" />
      </mask>
    </defs>

    <!-- Single mist layer group -->
    <g opacity="0.8" mask="url(#vertical-fade-mask)">
      <!-- The mist itself, masked by the lens -->
      <g mask="url(#mist-lens-mask)">
        <rect width="100%" height="100%" filter="url(#cloud-gen)" fill="white" />
      </g>
      
      <!-- Premium rim highlight (barely visible hint of refraction) -->
      <circle 
        id="lens-rim" 
        cx="-1000" 
        cy="-1000" 
        r="260" 
        fill="none" 
        stroke="white" 
        stroke-opacity="0.08" 
        stroke-width="1.5"
        style="filter: blur(2px);"
      />
    </g>
  </svg>
</div>
