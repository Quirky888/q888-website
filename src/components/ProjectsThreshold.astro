<section id="projects-threshold" class="relative w-full border-t border-[var(--line-soft)]">
  <div class="flex flex-col lg:flex-row lg:h-screen min-h-screen">
    <!-- Digital Ink Panel -->
    <div 
      id="project-digital-ink"
      data-project="digital-ink"
      tabindex="0"
      role="button"
      aria-label="View Digital Ink: A system for digital creation"
      class="group relative flex-1 flex flex-col items-center justify-center p-8 lg:p-12 border-b lg:border-b-0 lg:border-r border-[var(--line-soft)] cursor-pointer min-h-[60vh] lg:min-h-0 bg-[var(--bg-fog)] outline-none focus-visible:ring-1 focus-visible:ring-inset focus-visible:ring-[var(--line-soft)] transition-colors duration-500"
    >
      <div class="max-w-sm text-center">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-sans text-[var(--text-ink)] mb-6 tracking-tight opacity-90 transition-opacity duration-700 group-hover:opacity-100 group-focus-visible:opacity-100">
          Digital Ink
        </h2>
        <p class="text-xs md:text-sm font-mono text-[var(--text-muted)] leading-relaxed uppercase tracking-[0.2em] opacity-60 transition-opacity duration-700 group-hover:opacity-80 group-focus-visible:opacity-80">
          A system for meaning, scarcity, and traceable digital creation.
        </p>
      </div>
    </div>

    <!-- Edinburgh Magical Map Panel -->
    <div 
      id="project-edinburgh-map"
      data-project="edinburgh-map"
      tabindex="0"
      role="button"
      aria-label="View Edinburgh Magical Map: A mythic cartography"
      class="group relative flex-1 flex flex-col items-center justify-center p-8 lg:p-12 cursor-pointer min-h-[60vh] lg:min-h-0 bg-[var(--bg-fog)] outline-none focus-visible:ring-1 focus-visible:ring-inset focus-visible:ring-[var(--line-soft)] transition-colors duration-500"
    >
      <div class="max-w-sm text-center">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-sans text-[var(--text-ink)] mb-6 tracking-tight opacity-90 transition-opacity duration-700 group-hover:opacity-100 group-focus-visible:opacity-100">
          Edinburgh Magical Map
        </h2>
        <p class="text-xs md:text-sm font-mono text-[var(--text-muted)] leading-relaxed uppercase tracking-[0.2em] opacity-60 transition-opacity duration-700 group-hover:opacity-80 group-focus-visible:opacity-80">
          A mythic cartography of place, memory, and hidden doors.
        </p>
      </div>
    </div>
  </div>
</section>
